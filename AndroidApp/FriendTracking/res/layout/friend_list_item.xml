<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:weightSum="10" >

    <ImageView
        android:id="@+id/friend_photo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:src="@drawable/male" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_weight="8"
        android:background="@android:color/transparent" >

        <TextView
            android:id="@+id/friend_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="Vlado"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_first_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_username"
            android:ellipsize="end"
            android:lines="1"
            android:text="Vladimir Ilievski"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/online_since"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_first_last_name"
            android:text="Last online: 15.08.2014"
            android:textColor="@color/gray_60"
            android:textSize="15sp"
            android:textStyle="italic" />
    </RelativeLayout>

</LinearLayout>